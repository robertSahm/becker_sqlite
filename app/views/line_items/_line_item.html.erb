<% if line_item == @current_item %>
  <ul id="current_item" class="line_item<%= line_item.id %>">
<% else %>
  <ul class="line_item<%= line_item.id %>">
<% end %>
    <li>Product: <%= line_item.product.name %></li>
    <li>Object: <%= line_item.inspect %></li>
    <li>Quantity: <%= line_item.quantity %>
      <span class="delete-button"><%= link_to 'Remove', line_item, 
                      method:  :delete,
                      remote: true,
                      confirm: "Does this ever happen?" %>
      </span><span class="save-button"><%= link_to 'Save in Wishlist' %></span></li>
    <li class="item_price">Total Item Price: <%= number_to_currency(line_item.total_price) %></li>
  </ul>
