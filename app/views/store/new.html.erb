<%= render 'layouts/main_navbar' %>
<div id="store-page">
  <div class="jonBumper">
    <div class="tabs">
      <h1 class="instrument">Custom Build an Instrument</h1>
      <ul>
        <li><%= link_to 'Guitar',{ controller: 'store', action: 'new'}, {href: '#', :id => "storeClick" }%></li>
        <li><%= link_to "Bass",   {  action: 'new', instrument: 'bass'}, {href: '#', :id => "storeClick" } %></li>
        <li><%= link_to "Custom Instruments", {action: 'new', instrument: 'custom'},{href: '#', :id => "storeClick" } %></li>
        <li><%= link_to "All", action: 'new' %></li>
      </ul>
    </div> <!-- tabs --> 

    <div class="loop">
      <% @type_of.each do |t| %>
        <div class="showcase">
          <h2> Choose a <%= t.capitalize %> Body Style </h2>
          <% @body_types.each do |p| %>
            <% if p.type_of == t %>
              <div id="listbox">
                <p><%= p.name %></p>
                <%= link_to image_tag(p.image_url), action: "themes", id: p.id  %>
              </div>
            <% end %>
          <% end %>  
        </div> <!-- showcase -->
      <% end %>
    </div> <!-- loop -->
  </div> <!-- jonBumper -->

</div> <!-- store-page -->
  
  
  