  
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>Catalog</h1>
<% @products.each do |product| %>
  <div class="entry">
    <%= link_to image_tag(product.image_url, :border=>0), product_path(product) %>
    <h3><%= link_to product.name, controller: 'products', action: 'show', id: product.id %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency(product.price) %></span>
      <%= button_to 'Select', controller: 'store', action:'build', id: product.id %></h2>
    </div>

<% end %>
</div>

