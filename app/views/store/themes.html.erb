  <%= render 'layouts/main_navbar' %>
<div id="store-page">
    <div class="tabs">
      <h1 class="instrument">Custom Build an Instrument</h1>
    </div> <!-- tabs --> 
    <div class="closed_box">You have chosen the <%= @body_type.name.capitalize %> <%= @body_type.type_of.capitalize %></div>
    <div class="loop">
        <div class="showcase">
          <h2> Choose a Theme  </h2>
          <% @body_type.themes.each do |t| %>
              <div id="listbox">
                <p><%= link_to t.name, theme_path(t) %></p>
                <% if t.name == Theme.find(t.id).name %>
                  <%= link_to image_tag(@body_type.image_url), action: "show", body_type: @body_type, theme: t %>
                <% else %>
                  <%= link_to image_tag(t.image_url), action: "show", body_type: @body_type, theme: t %>
                <% end %>
              </div>
          <% end %>  
        </div> <!-- showcase -->
    </div> <!-- loop -->

</div> <!-- page -->