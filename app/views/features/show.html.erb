  <%= render 'layouts/main_navbar' %>
  <% if notice %><p id="notice"><%= notice %></p><% end  %>
<p>
  <b>Name:</b>
  <%= @feature.name %>
</p>
<p>
  <b>Description:</b>
  <%= @feature.description %>
</p>
<% case @feature.name %>
<% when "Body Type" %>  
  <% @list = BodyType.all %>
  <p>
    <b>Body Types</b><br />
      <% @list.each do |l| %>
        <%= l.name %><br />
      <% end %>
    </p>
<% when "Theme" %>
  <% @list = Theme.all %>
  <p>
    <b>Themes</b><br />
      <% @list.each do |l| %>
        <%= l.name %><br />
      <% end %>
    </p>
<% else %>
  <p>
    <b>Options</b><br />
    <% @list.each do |l| %>
      <%= l.description %><br />
    <% end %>
  </p>
<% end %>


<%= link_to 'Edit', edit_feature_path(@feature) %> |
<%= link_to 'Back', features_path %>
