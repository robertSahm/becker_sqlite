<h2>Order Review</h2>
   <%= render @cart %>
   <tr class="total_line">
     <td colspan="4">Total</td>
     <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
   </tr>
      <p>
        <h4>Name:</h4>
        <%=h @checkout.first_name  %>
      </p>
      <p>
        <h4>Email:</h4>
        <%=h @checkout.email %>
      </p>
      <p>
        <h4>Billing Address:</h4>
        <%=h @checkout.address %>
      </p>
      <p>
        <h4>Shipping Address:</h4>
        <%=h @checkout.address_ship %>
      </p>
      
      <div class="actions">
        <p><%= f.submit "Complete", action: :thankyou %></p> 
      </div>