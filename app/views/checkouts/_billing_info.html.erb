<h2>Billing Information</h2>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, rows: 3, cols: 40 %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.email_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.email_field :state%>
  </div>
  <div class="field">
    <%= f.label :zip_code %><br />
    <%= f.email_field :zip_code %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.email_field :country %>
  </div>
  <div class="field">
    <%= f.label "Ship to same address" %>
    <%= f.check_box :address_ship   %>
  </div>
  <%= render 'button' %>


